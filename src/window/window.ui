<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="MoviesWindow" parent="GtkApplicationWindow">
    <property name="title">Movies</property>
    <child>
      <object class="GtkBox">
        <property name="orientation">horizontal</property>
        <child>
          <object class="GtkBox" id="content">
            <property name="orientation">vertical</property>
            <property name="hexpand">true</property>
            <property name="halign">fill</property>
            <property name="valign">end</property>
            <!-- <property name="has-frame">true</property> -->
            <property name="margin-top">10</property>
            <property name="margin-end">10</property>
            <property name="margin-start">10</property>
            <property name="margin-bottom">10</property>
            <child>
              <object class="GtkImage" id="poster">
                <property name="hexpand">true</property>
              </object>
            </child>
            <child>
              <object class="GtkBox" id="info">
                <property name="orientation">vertical</property>
                <child>
                  <object class="GtkLabel" id="original_title">
                    <property name="use_markup">true</property>
                    <property name="justify">center</property>
                    <property name="wrap">true</property>
                    <!-- <property name="label">Original Title</property> -->
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="original_language">
                    <property name="use_markup">true</property>
                    <property name="justify">center</property>
                    <property name="wrap">true</property>
                    <!-- <property name="label">Original Language</property> -->
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="overview">
                    <property name="use_markup">true</property>
                    <property name="justify">center</property>
                    <property name="wrap">true</property>
                    <!-- <property name="label">Overview</property> -->
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="vote_average">
                    <property name="use_markup">true</property>
                    <property name="justify">center</property>
                    <property name="wrap">true</property>
                    <!-- <property name="label">Vote Average</property> -->
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="vote_count">
                    <property name="use_markup">true</property>
                    <property name="justify">center</property>
                    <property name="wrap">true</property>
                    <!-- <property name="label">Vote Count</property> -->
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="release_date">
                    <property name="use_markup">true</property>
                    <property name="justify">center</property>
                    <property name="wrap">true</property>
                    <!-- <property name="label">Release Date</property> -->
                  </object>
                </child>
                <child>
                  <object class="GtkButton" id="play_button">
                    <property name="visible">false</property>
                    <property name="no-show-all">true</property>
                    <property name="label">Play</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkScrolledWindow" id="scrolled_window">
            <!-- <property name="orientation">vertical</property> -->
            <property name="margin-top">10</property>
            <property name="margin-end">10</property>
            <property name="margin-start">10</property>
            <property name="margin-bottom">10</property>
            <property name="hscrollbar-policy">never</property>
            <child>
              <object class="GtkListBox" id="list_box">
                <property name="margin-top">10</property>
                <property name="margin-end">10</property>
                <property name="margin-start">10</property>
                <property name="margin-bottom">10</property>
                <property name="selection-mode">none</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
